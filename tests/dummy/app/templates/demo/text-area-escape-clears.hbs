<div class="form">
  <div class="form-group">
    <label for="js-text-area-esc-clears">Escape Clears Textarea (Default Behaviour)</label>
    <TextArea @aria-describedby="js-text-area-esc-clears-helpblock" @autofocus={{true}} @class="form-control" @id="js-text-area-esc-clears" @placeholder="Text Was Cleared" @value="Press Escape To Clear Text" />
    <small id="js-text-area-esc-clears-helpblock" class="form-text text-muted">
      By default pressing <kbd>ESC</kbd> will clear textbox content: <code>\{{text-area autofocus=true ...}}</code>
    </small>
  </div>
  <div class="form-group">
    <label for="js-text-area-esc-off">Escape Clears Textarea Turned Off</label>
    <TextArea @aria-describedby="js-text-area-esc-off-helpblock" @class="form-control" @escapeKeyClears?={{false}} @focusSelectsText?={{false}} @id="js-text-area-esc-off" @placeholder="You Cleared Text Manually" @value="Pressing Escape Will NOT Clear Text" />
    <small id="js-text-area-esc-off-helpblock" class="form-text text-muted">
      Turning off clear textbox content: <code>\{{text-area escapeKeyClears?=false ...}}</code>
    </small>
  </div>
</div>