<div class="form">
  <div class="form-group">
    <label for="js-text-area-autofocus-select">Autofocus + Select</label>
    {{text-area
      aria-describedby="js-text-area-autofocus-select-helpblock"
      autofocus=true
      class="form-control"
      id="js-text-area-autofocus-select"
      placeholder="On Focus Text Is Selected"
      value="On Focus Text Is Selected"
    }}
    <small id="js-text-area-autofocus-select-helpblock" class="form-text text-muted">
      By default focus will select text: <code>\{{text-area autofocus=true ...}}</code>
    </small>
  </div>
  <div class="form-group">
    <label for="js-text-area-select">Select Text Is The Default Behaviour</label>
    {{text-area
      aria-describedby="js-text-area-select-helpblock"
      class="form-control"
      id="js-text-area-select"
      placeholder="On Focus Text Is Selected"
      value="On Focus Text Is Selected"
    }}
    <small id="js-text-area-select-helpblock" class="form-text text-muted">
      Click/tab to focus, text selected: <code>\{{text-area ...}}</code>
    </small>
  </div>
  <div class="form-group">
    <label for="js-text-area-select-off">Select Text Is The Default Behaviour</label>
    {{text-area
      aria-describedby="js-text-area-select-off-helpblock"
      class="form-control"
      focusSelectsText?=false
      id="js-text-area-select-off"
      placeholder="On Focus Text Is NOT Selected"
      value="On Focus Text Is NOT Selected"
    }}
    <small id="js-text-area-select-off-helpblock" class="form-text text-muted">
      Click/tab to focus, text is <span class="bg-warning px-1 text-dark">NOT</span> selected:
      <code>\{{text-area focusSelectsText?=false ...}}</code>
    </small>
  </div>
</div>