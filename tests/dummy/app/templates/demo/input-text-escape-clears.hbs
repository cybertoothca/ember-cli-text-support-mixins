<div class="form">
  <div class="form-group">
    <label for="js-text-esc-clears">Escape Clears Textbox (Default Behaviour)</label>
    <InputText @aria-describedby="js-text-esc-clears-helpblock" @autofocus={{true}} @class="form-control" @id="js-text-esc-clears" @placeholder="Text Was Cleared" @value="Press Escape To Clear Text" />
    <small id="js-text-esc-clears-helpblock" class="form-text text-muted">
      By default pressing <kbd>ESC</kbd> will clear textbox content: <code>\{{input-text autofocus=true ...}}</code>
    </small>
  </div>
  <div class="form-group">
    <label for="js-text-esc-off">Escape Clears Textbox Turned Off</label>
    <InputText @aria-describedby="js-text-esc-off-helpblock" @class="form-control" @escapeKeyClears?={{false}} @focusSelectsText?={{false}} @id="js-text-esc-off" @placeholder="You Cleared Text Manually" @value="Pressing Escape Will NOT Clear Text" />
    <small id="js-text-esc-off-helpblock" class="form-text text-muted">
      Turning off clear textbox content: <code>\{{input-text escapeKeyClears?=false ...}}</code>
    </small>
  </div>
</div>