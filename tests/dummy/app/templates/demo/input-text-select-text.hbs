<div class="form">
  <div class="form-group">
    <label for="js-text-autofocus-select">Autofocus + Select</label>
    {{input-text
      aria-describedby="js-text-autofocus-select-helpblock"
      autofocus=true
      class="form-control"
      id="js-text-autofocus-select"
      placeholder="On Focus Text Is Selected"
      value="On Focus Text Is Selected"
    }}
    <small id="js-text-autofocus-select-helpblock" class="form-text text-muted">
      By default focus will select text: <code>\{{input-text autofocus=true ...}}</code>
    </small>
  </div>
  <div class="form-group">
    <label for="js-text-select">Select Text (Default Behaviour)</label>
    {{input-text
      aria-describedby="js-text-select-helpblock"
      class="form-control"
      id="js-text-select"
      placeholder="On Focus Text Is Selected"
      value="On Focus Text Is Selected"
    }}
    <small id="js-text-select-helpblock" class="form-text text-muted">
      Click/tab to focus, text selected: <code>\{{input-text ...}}</code>
    </small>
  </div>
  <div class="form-group">
    <label for="js-text-area-select-off">Turn Off Select Text</label>
    {{input-text
      aria-describedby="js-text-select-off-helpblock"
      class="form-control"
      focusSelectsText?=false
      id="js-text-select-off"
      placeholder="On Focus Text Is NOT Selected"
      value="On Focus Text Is NOT Selected"
    }}
    <small id="js-text-select-off-helpblock" class="form-text text-muted">
      Click/tab to focus, text is <span class="bg-warning px-1 text-dark">NOT</span> selected:
      <code>\{{input-text focusSelectsText?=false ...}}</code>
    </small>
  </div>
</div>