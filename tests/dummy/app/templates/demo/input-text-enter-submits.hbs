<h3>
  Triggered Via
  <br />
  <code class="small">
    {{fa-icon "angle-left"}}form
    \{{on "submit" this.withSubmit}}{{fa-icon "angle-right"}}...
  </code>
</h3>

<form {{on "submit" this.withSubmit}}>
  <div class="form-group">
    <label for="js-text-submit-with-on">
      <kbd>ENTER</kbd>
      Submits Turned On (DEFAULT Behaviour)
    </label>
    <InputText
      @aria-describedby="js-text-submit-with-on-helpblock"
      @autofocus={{true}}
      @class="form-control"
      @id="js-text-submit-with-on"
      @placeholder="Press ENTER To Submit"
    />
    <small id="js-text-submit-with-on-helpblock" class="form-text text-muted">
      <kbd>ENTER</kbd>
      will submit form :
      <code>\{{input-text ...}}</code>
    </small>
  </div>
</form>
<hr />

<form {{on "submit" this.withSubmit}}>
  <div class="form-group">
    <label for="js-text-submit-with-on-off">
      <kbd>ENTER</kbd>
      Submits Turned
      <span class="bg-warning px-1 text-dark">OFF</span>
    </label>
    <InputText
      @aria-describedby="js-text-submit-with-on-off-helpblock"
      @class="form-control"
      @enterSubmitsForm?={{false}}
      @id="js-text-submit-with-on-off"
      @placeholder="Pressing ENTER Will Not Submit"
    />
    <small
      id="js-text-submit-with-on-off-helpblock"
      class="form-text text-muted"
    >
      <kbd>ENTER</kbd>
      will
      <span class="bg-warning px-1 text-dark">NOT</span>
      submit form :
      <code>\{{input-text enterSubmitsForm?=false ...}}</code>
    </small>
  </div>
</form>